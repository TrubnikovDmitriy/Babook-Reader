<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BabookReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status, navigation and window color. -->
        <item name="android:statusBarColor">@color/book_page_background_color</item>
        <item name="android:windowBackground">@color/book_page_background_color</item>
        <item name="android:navigationBarColor">@color/book_page_background_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>